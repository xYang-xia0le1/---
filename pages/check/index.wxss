/* pages/check/index.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

/* 检测类型样式 */
.check-types {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx 0;
}

.type-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid transparent;
}

.type-item.active {
  background: #ECF3FE;
  border-color: #3A7FED;
}

.type-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 16rpx;
}

.type-item text {
  font-size: 28rpx;
  color: #333;
}

/* 检测内容样式 */
.check-content {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 20rpx 0;
}

.input {
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.textarea {
  width: 100%;
  height: 200rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 1.6;
}

/* 二维码上传样式 */
.qrcode-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.qrcode-preview {
  width: 300rpx;
  height: 300rpx;
  border-radius: 8rpx;
}

.upload-btn {
  width: 300rpx;
  height: 300rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-btn image {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 16rpx;
}

.upload-btn text {
  font-size: 28rpx;
  color: #999;
}

/* 检测按钮样式 */
.check-btn {
  width: 100%;
  height: 88rpx;
  background: #3A7FED;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.check-btn.disabled {
  background: #ccc;
}

/* 检测结果样式 */
.result-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-top: 20rpx;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.result-time {
  font-size: 24rpx;
  color: #999;
}

.result-content {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-radius: 8rpx;
}

.result-content.safe {
  background: #E8F5E9;
}

.result-content.warning {
  background: #FFF3E0;
}

.result-content.danger {
  background: #FFEBEE;
}

.result-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.result-info {
  flex: 1;
}

.result-level {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

.result-desc {
  font-size: 26rpx;
  color: #666;
}