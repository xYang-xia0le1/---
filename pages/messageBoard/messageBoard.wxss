.container {
  padding: 20rpx;
}

.input-area {
  margin-bottom: 20rpx;
}

textarea {
  width: 100%;
  height: 200rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  padding: 10rpx;
  font-size: 28rpx;
}

button {
  width: 100%;
  height: 60rpx;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5rpx;
  font-size: 28rpx;
}

.message-list {
  margin-top: 20rpx;
}

.message-item {
  padding: 15rpx;
  margin-bottom: 10rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  font-size: 28rpx;
}
