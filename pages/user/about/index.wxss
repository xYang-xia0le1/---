/* pages/user/about/index.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 头部样式 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  background: #fff;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.version {
  font-size: 24rpx;
  color: #999;
}

/* 内容区域样式 */
.section {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background: #3A7FED;
  border-radius: 3rpx;
}

.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 功能特点样式 */
.feature-list {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feature-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 12rpx;
}

.feature-item text {
  font-size: 26rpx;
  color: #666;
}

/* 联系方式样式 */
.contact-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.contact-item image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.contact-item text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.copy-text {
  font-size: 24rpx;
  color: #3A7FED !important;
  padding: 4rpx 12rpx;
  border: 1rpx solid #3A7FED;
  border-radius: 24rpx;
}

/* 合作伙伴样式 */
.partner-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.partner-logo {
  width: 160rpx;
  height: 60rpx;
}

/* 底部版权样式 */
.footer {
  text-align: center;
  padding: 40rpx 0;
}

.footer text {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 1.8;
}