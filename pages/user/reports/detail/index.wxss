.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 状态栏样式 */
.status-bar {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.status-bar.pending {
  background: #FFF7E6;
}

.status-bar.processing {
  background: #ECF3FE;
}

.status-bar.completed {
  background: #F6FFED;
}

.status-text {
  font-size: 32rpx;
  font-weight: 500;
}

.status-bar.pending .status-text {
  color: #FAAD14;
}

.status-bar.processing .status-text {
  color: #3A7FED;
}

.status-bar.completed .status-text {
  color: #52C41A;
}

.report-time {
  font-size: 24rpx;
  color: #999;
}

/* 内容区域样式 */
.content-section,
.progress-section,
.updates-section {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.value {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
}

.image-list image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

/* 进度列表样式 */
.progress-list {
  position: relative;
}

.progress-list::before {
  content: '';
  position: absolute;
  left: 8rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background: #eee;
}

.progress-item {
  position: relative;
  padding-left: 40rpx;
  margin-bottom: 30rpx;
}

.progress-dot {
  position: absolute;
  left: 0;
  top: 8rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  border: 2rpx solid #999;
  background: #fff;
}

.progress-item.done .progress-dot {
  background: #3A7FED;
  border-color: #3A7FED;
}

.progress-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.progress-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
  display: block;
}

.progress-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
}

/* 补充说明样式 */
.update-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.update-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
  display: block;
}

.update-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: block;
}

.update-images {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.update-images image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
}

/* 底部按钮样式 */
.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.update-btn {
  width: 100%;
  height: 88rpx;
  background: #3A7FED;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
} 