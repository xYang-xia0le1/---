.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 状态标签样式 */
.status-scroll {
  background: #fff;
  padding: 20rpx 0;
  white-space: nowrap;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 1;
}

.status-list {
  padding: 0 20rpx;
  display: inline-block;
}

.status-item {
  display: inline-block;
  padding: 12rpx 30rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 28rpx;
  transition: all 0.3s;
}

.status-item.active {
  color: #fff;
  background: #3A7FED;
  box-shadow: 0 4rpx 8rpx rgba(58, 127, 237, 0.2);
}

/* 举报列表样式 */
.report-list {
  padding: 20rpx;
}

.report-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.report-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.report-type {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.report-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.report-status.pending {
  color: #FAAD14;
  background: #FFF7E6;
}

.report-status.processing {
  color: #3A7FED;
  background: #ECF3FE;
}

.report-status.completed {
  color: #52C41A;
  background: #F6FFED;
}

.report-content {
  margin-bottom: 16rpx;
}

.report-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: block;
}

.report-images {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.report-images image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
}

.report-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #eee;
}

.report-time {
  font-size: 24rpx;
  color: #999;
}

.report-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  margin: 0;
  padding: 0 24rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  border: none;
  border-radius: 28rpx;
}

.action-btn.primary {
  color: #fff;
  background: #3A7FED;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
} 