.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 分类标签样式 */
.category-scroll {
  background: #fff;
  padding: 20rpx 0;
  white-space: nowrap;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 1;
}

.category-list {
  padding: 0 20rpx;
  display: inline-block;
}

.category-item {
  display: inline-block;
  padding: 12rpx 30rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 28rpx;
  transition: all 0.3s;
}

.category-item.active {
  color: #fff;
  background: #3A7FED;
  box-shadow: 0 4rpx 8rpx rgba(58, 127, 237, 0.2);
}

/* 收藏列表样式 */
.collect-list {
  padding: 20rpx;
}

.collect-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.collect-item:active {
  transform: scale(0.98);
}

.item-image {
  width: 100%;
  height: 300rpx;
}

.item-info {
  padding: 20rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.item-tag {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.item-tag.guide {
  color: #3A7FED;
  background: #ECF3FE;
}

.item-tag.news {
  color: #52C41A;
  background: #F6FFED;
}

.item-tag.tips {
  color: #FAAD14;
  background: #FFF7E6;
}

.item-time {
  font-size: 24rpx;
  color: #999;
}

.item-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.item-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-actions {
  display: flex;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
}

.action-btn {
  display: flex;
  align-items: center;
  margin-right: 32rpx;
}

.action-btn image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.action-btn text {
  font-size: 28rpx;
  color: #666;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
} 