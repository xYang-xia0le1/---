.container {
  padding: 20rpx;
  background: #f5f5f5;
}

.news-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.news-item {
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
}

.news-image {
  width: 240rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.news-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.news-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.news-brief {
  font-size: 28rpx;
  color: #666;
  margin: 10rpx 0;
}

.news-meta {
  display: flex;
  justify-content: space-between;
  color: #999;
  font-size: 24rpx;
} 