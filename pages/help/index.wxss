/* pages/help/index.wxss */
.container {
  padding: 20rpx;
  background: #f5f5f5;
}

/* 紧急求助按钮 */
.emergency-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.emergency-btn {
  width: 200rpx;
  height: 200rpx;
  background: #ff4d4f;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  box-shadow: 0 6rpx 16rpx rgba(255, 77, 79, 0.3);
}

.emergency-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.emergency-btn text {
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
}

.emergency-tip {
  font-size: 24rpx;
  color: #999;
}

/* 常用电话 */
.quick-call {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.phone-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.phone-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.phone-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.phone-info {
  flex: 1;
}

.phone-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
  display: block;
}

.phone-number {
  font-size: 24rpx;
  color: #666;
}

.call-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 在线求助 */
.online-help {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.help-form {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.type-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  border: 2rpx solid transparent;
}

.type-item.active {
  background: #ECF3FE;
  border-color: #3A7FED;
}

.type-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 10rpx;
}

.type-item text {
  font-size: 26rpx;
  color: #333;
}

.help-content {
  width: 100%;
  height: 240rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.contact-input {
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: #3A7FED;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.submit-btn[disabled] {
  background: #ccc;
}

/* 求助记录 */
.help-records {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.more-text {
  font-size: 28rpx;
  color: #3A7FED;
}

.record-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.record-item {
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  position: relative;
}

.record-status {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.record-status.pending {
  background: #FFF3E0;
  color: #FF9800;
}

.record-status.processing {
  background: #E3F2FD;
  color: #2196F3;
}

.record-status.completed {
  background: #E8F5E9;
  color: #4CAF50;
}

.record-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.record-type {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-content {
  font-size: 26rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}