.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

.help-content {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.help-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.help-type {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.help-status {
  font-size: 28rpx;
  color: #3A7FED;
}

.help-time {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 20rpx;
}

.help-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.replies-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 120rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
}

.reply-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.reply-item {
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
}

.reply-item.admin {
  background: #e6f0ff;
}

.reply-content {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.reply-time {
  font-size: 24rpx;
  color: #999;
}

.reply-input {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  border-top: 1rpx solid #eee;
}

.reply-input input {
  flex: 1;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.submit-btn {
  width: 160rpx;
  height: 72rpx;
  background: #3A7FED;
  color: #fff;
  border-radius: 36rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
} 