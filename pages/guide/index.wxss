/* pages/guide/index.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 搜索栏样式 */
.search-bar {
  padding: 20rpx;
  background: #fff;
}

.search-box {
  display: flex;
  align-items: center;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 24rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
}

/* 分类导航样式 */
.category-scroll {
  background: #fff;
  padding: 20rpx 0;
  white-space: nowrap;
  border-bottom: 1rpx solid #eee;
}

.category-list {
  padding: 0 20rpx;
  display: inline-block;
}

.category-item {
  display: inline-block;
  padding: 12rpx 30rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 28rpx;
}

.category-item.active {
  color: #fff;
  background: #3A7FED;
}

/* 指南列表样式 */
.guide-list {
  padding: 20rpx;
}

.guide-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.guide-image {
  width: 100%;
  height: 300rpx;
}

.guide-info {
  padding: 20rpx;
}

.guide-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.guide-tag {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.guide-tag.fraud {
  color: #F44336;
  background: #FFEBEE;
}

.guide-tag.account {
  color: #FF9800;
  background: #FFF3E0;
}

.guide-tag.payment {
  color: #4CAF50;
  background: #E8F5E9;
}

.guide-tag.privacy {
  color: #2196F3;
  background: #E3F2FD;
}

.guide-time {
  font-size: 24rpx;
  color: #999;
}

.guide-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.guide-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: block;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.guide-stats {
  display: flex;
  gap: 32rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-item image {
  width: 28rpx;
  height: 28rpx;
}

.stat-item text {
  font-size: 24rpx;
  color: #999;
}