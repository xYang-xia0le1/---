.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.tip-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  position: relative;
}

.tip-image {
  width: 200rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.tip-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.tip-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.tip-brief {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.tip-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-top: 10rpx;
}

.tip-time, .tip-views {
  font-size: 24rpx;
  color: #999;
}

.tip-type {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
}

.tip-type.warning {
  background: #fff7e6;
  color: #fa8c16;
}

.tip-type.danger {
  background: #fff1f0;
  color: #f5222d;
}

.tip-type.info {
  background: #e6f7ff;
  color: #1890ff;
} 