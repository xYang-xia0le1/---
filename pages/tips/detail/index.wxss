.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

.tip-content {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.tip-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.tip-meta {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.tip-time {
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
}

.tip-views {
  font-size: 24rpx;
  color: #999;
}

.cover-image {
  width: 100%;
  margin-bottom: 30rpx;
  border-radius: 8rpx;
}

.content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
} 