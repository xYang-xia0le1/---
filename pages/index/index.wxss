/* 页面容器样式 */
.container {
  padding: 0;
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 轮播图 */
.swiper {
  width: 100%;
  height: 100%;
}

.swiper-item image {
  width: 100%; /* 图片宽度100% */
  height: 100%; /* 图片高度100% */
  object-fit: cover; /* 保证图片等比例填充容器 */
}

/* 反诈新闻部分 */
.news-section {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff;
}

.news-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.news-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap; /* 使列能适应屏幕宽度 */
}

.news-column {
  width: 48%; /* 每列宽度 */
  margin-bottom: 20rpx;  /* 为列之间添加间距 */
}

.news-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 16rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  cursor: pointer;  /* 使新闻项有点击效果 */
}

.news-image {
  width: 100%;         /* 图片宽度100% */
  height: 200rpx;      /* 固定高度，保持一致性 */
  border-radius: 8rpx; /* 圆角效果 */
  margin-bottom: 10rpx;
  object-fit: cover;   /* 保证图片等比例填充容器 */
}

.news-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.news-summary {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 点击效果 */
.news-item:hover {
  transform: translateY(-5rpx);
  box-shadow: 0 6rpx 15rpx rgba(0, 0, 0, 0.1);
}

.swiper-section {
  width: 100%;
  height: 360rpx;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

/* 功能导航区 */
.nav-section {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  padding: 30rpx 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
  width: auto;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
}

.nav-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.nav-text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

/* 通用section头部样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.more-text {
  font-size: 24rpx;
  color: #666;
}

/* 安全资讯区 */
.news-section {
  background: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
}

.news-list {
  padding: 20rpx;
}

.news-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.news-image {
  width: 200rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.news-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.news-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.news-brief {
  font-size: 24rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.news-time {
  font-size: 22rpx;
  color: #999;
}

/* 安全小贴士 */
.tips-section {
  background: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
}

.tips-list {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.tip-card {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.tip-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}
